;
; Sample config file.
; Copy or rename to config.ini
;

env             = dev
timezone        = America/Sao_Paulo
entities_path   = /src/RestfulBlog/Entity
deezer_key      = your_deezer_key
[database]
    driver      = pdo_mysql
    host        = localhost
    dbname      = my_database
    user        = database_user
    password    = database_pass
    path        = database_path (leave blank if you not using sqlite)
